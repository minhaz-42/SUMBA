# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-new-one
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/sumba_db
# Or individual settings:
DB_NAME=sumba_db
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (for Django Channels)
REDIS_URL=redis://localhost:6379/0

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ML Model Settings
MODEL_CHECKPOINT_DIR=/path/to/checkpoints
DEFAULT_MODEL=hybrid
MAX_SEQUENCE_LENGTH=150
BEAM_WIDTH=4

# Tokenizer Settings
TOKENIZER_PATH=/path/to/tokenizer.json
VOCAB_SIZE=8000

# MediaPipe Settings
MEDIAPIPE_MODEL_COMPLEXITY=1
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/sumba/app.log

# AWS S3 (Optional - for model/data storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=sumba-data
AWS_S3_REGION_NAME=us-east-1

# Email Settings (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# Celery (Optional - for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
